---
layout: null
permalink: /image-sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  {% for page in site.pages %}
    {% if page.layout == 'project' %}
    <url>
      <loc>{{ site.url }}{{ page.url }}</loc>
      {% if page.image %}
      <image:image>
        <image:loc>{{ site.url }}{{ page.image }}</image:loc>
        <image:title><![CDATA[{{ page.title }}]]></image:title>
      </image:image>
      {% endif %}
      {% if page.gallery %}
      {% for img in page.gallery %}
      <image:image>
        <image:loc>{{ site.url }}{{ img }}</image:loc>
        <image:title><![CDATA[{{ page.title }} - Image {{ forloop.index }}]]></image:title>
      </image:image>
      {% endfor %}
      {% endif %}
    </url>
    {% endif %}
  {% endfor %}
</urlset>
